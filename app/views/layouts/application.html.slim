html lang='en'
  head
    title
      - if content_for? :title
        | FUERAMADURO - #{yield :title}
      - else
        | FUERAMADURO

    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    meta name="description" content="FUERA MADURO"
    meta name="author" content="MOVIMIENTO ESTUDIANTIL"

    // Defaults
    meta value="twitter:site" content="@MOVIMIENTOESTUDIANTIL"
    meta name="twitter:card" content="summary"
    meta property="og:site_name" content="FUERAMADURO.COM"

    //- if content_for? :event_meta_tags
      //= yield :event_meta_tags

    = csrf_meta_tags

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  //  = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places', 'data-turbolinks-track' => true

  body id=params[:controller] class=params[:action]

    = render 'partial/nav'

    .text-center
      .alert.alert-warning
        .message
          span LA REBELION SE HIZO DERECHO
          a href="/"  MOVIMIENTO ESTUDIANTIL

    .container
      - unless flash.empty?
        .text-center
          // .notice.text-info = notice
          .alert.text-danger = alert
      = yield

    .site-footer
      .text-center
        // .octocat
          // a href="/"
            // img src="https://octodex.github.com/images/constructocat2.jpg" height="36px"
        p
          strong MOVIMIENTO ESTUDIANTIL
        p
          strong UNIDOS PARA TRIUNFAR
